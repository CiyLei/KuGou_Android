<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relative_zp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_home_hide_zp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="作品" />

        <TextView
            android:id="@+id/tv_home_hide_zp_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_home_hide_zp_name"
            android:text="2016-03-19 13:34"
            android:textColor="@color/wxh_pop_font_color" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_hide_zp_hide_del"
        android:layout_width="200px"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/relative_zp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#f60"
        android:gravity="center"
        android:text="删除"
        android:textColor="#fff" />

</RelativeLayout>