<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/login_top_color"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/tv_songinfopop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手-歌名"
            android:textColor="@color/login_top_color"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/wxh_pop_line_bg"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_songinfopop"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_songinfopop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手-歌名"
            android:layout_marginLeft="15dp"
            android:textSize="14sp"/>

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/wxh_pop_line_bg"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/tv_songinfopop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="播放时长"
            android:textSize="12sp"
            android:layout_margin="10dp"/>
        
        <TextView 
            android:id="@+id/tv_songinfopop_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="音质类型"
            android:textSize="12sp"
            android:layout_margin="10dp"/>
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView 
            android:id="@+id/tv_songinfopop_format"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文件格式"
            android:textSize="12sp"
            android:layout_margin="10dp"/>
        
        <TextView 
            android:id="@+id/tv_songinfopop_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="文件大小"
            android:textSize="12sp"
            android:layout_margin="10dp"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/tv_songinfopop_zj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专辑名称"
        android:textSize="12sp"
        android:layout_margin="10dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/wxh_pop_line_bg"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/btn_songinfopop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/song_info_pop_close"
        android:textColor="@color/wxh_pop_font_color"
        android:padding="12dp"
        android:textSize="14sp"
        android:text="关闭" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="vertical" >
    </LinearLayout>
    
</LinearLayout>
