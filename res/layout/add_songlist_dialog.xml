<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/login_top_color"
        android:orientation="vertical" >
    </LinearLayout>
    
    <TextView 
            android:id="@+id/tv_addsonglist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建歌单"
            android:textColor="@color/login_top_color"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

    <EditText
        android:id="@+id/edit_addsonglist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:background="@drawable/login_user_bg"
        android:padding="5dp"
        android:textSize="14sp"
        android:text="新建歌单"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/btn_addsonglist_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/login_user_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="取消" />

        <Button
            android:id="@+id/btn_addsonglist_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/login_user_bg"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/login_top_color"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>
