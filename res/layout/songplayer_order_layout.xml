<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/line_songplayeroledr_sxbf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blur_line"
        android:onClick="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_margin="10dp"
            android:src="@drawable/songplayer_sxbf" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:text="顺序播放" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_songplayeroledr_sjbf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blur_line"
        android:onClick="true"
        android:gravity="center"  >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_margin="10dp"
            android:src="@drawable/songplayer_sjbf" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:text="随机播放" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_songplayeroledr_dqxh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blur_line"
        android:onClick="true"
        android:gravity="center"  >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_margin="10dp"
            android:src="@drawable/songplayer_dqxh" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="#fff"
            android:text="单曲循环" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>
