<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" >

        <com.example.kugou.Controls.RoundImageView
            android:id="@+id/pic_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:visibility="invisible"
            android:scaleType="centerInside"
            android:src="@drawable/pic_user_small" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pic_user"
            android:text="Ciy_Lei"
            android:textColor="#fff"
            android:visibility="invisible"
            android:maxLines="1"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/skin_img"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/home_menu_skin_bg" />

        <Button
            android:id="@+id/home_menu_login"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/home_menu_login_bg"
            android:textColor="#fff"
            android:text="登录" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/line" />

    <com.example.kugou.Controls.home_menu_gv
        android:id="@+id/gridView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:verticalSpacing="20dp"
        android:numColumns="3" >
    </com.example.kugou.Controls.home_menu_gv>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/line" />

    <Button
        android:id="@+id/btn_home_menu_close"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00000000"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="返回首页" />

</LinearLayout>