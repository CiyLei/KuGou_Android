<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/login_top_color" >

        <ImageView
            android:id="@+id/img_hide_sc_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/pic_registered_back" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="补充歌曲信息"
            android:textColor="#fff"
            android:textSize="14sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:scrollbars="none"
        android:layout_below="@+id/relativeLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="浏览我的歌曲"
                    android:textStyle="italic" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/wxh_pop_line_bg"
                android:orientation="vertical" >
            </LinearLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
        			android:textColor="@color/wxh_pop_font_color"
					android:padding="10dp"
                    android:text="上传到:" />
                
                <RadioGroup 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
					android:padding="10dp"
                    android:orientation="horizontal">
                    
                    <RadioButton 
                        android:id="@+id/radioButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:checked="true"
                        android:layout_marginRight="50dp"
                        android:textSize="14sp"
                        android:textColor="@drawable/home_hide_sc_tab_font"
                        android:textStyle="bold"
                        android:text="原创"/>
                    
                    <RadioButton 
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:button="@null"
                        android:textColor="@drawable/home_hide_sc_tab_font"
                        android:textStyle="bold"
                        android:text="翻唱"/>
                    
                </RadioGroup>
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/wxh_pop_line_bg"
                android:orientation="vertical" >
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="歌名:"
                        android:textColor="@color/wxh_pop_font_color" />

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/editText1"
                        android:layout_toRightOf="@+id/textView4"
                        android:background="@color/wxh_pop_line_bg"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/linearLayout1"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:background="#0fff"
                        android:textSize="13sp"
                        android:ems="10" >

                        <requestFocus />
                    </EditText>
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="作词:"
                        android:textColor="@color/wxh_pop_font_color" />

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/editText2"
                        android:layout_toRightOf="@+id/textView5"
                        android:background="@color/wxh_pop_line_bg"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/linearLayout2"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:background="#0fff"
                        android:textSize="13sp"
                        android:ems="10" >

                        <requestFocus />
                    </EditText>
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="作曲:"
                        android:textColor="@color/wxh_pop_font_color" />

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/editText3"
                        android:layout_toRightOf="@+id/textView6"
                        android:background="@color/wxh_pop_line_bg"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/linearLayout3"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:background="#0fff"
                        android:textSize="13sp"
                        android:ems="10" >

                        <requestFocus />
                    </EditText>
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="演唱:"
                        android:textColor="@color/wxh_pop_font_color" />

                    <LinearLayout
                        android:id="@+id/linearLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/editText4"
                        android:layout_toRightOf="@+id/textView7"
                        android:background="@color/wxh_pop_line_bg"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/linearLayout4"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:background="#0fff"
                        android:textSize="13sp"
                        android:ems="10" >

                        <requestFocus />
                    </EditText>
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:padding="10dp"
                        android:text="编曲:"
                        android:textColor="@color/wxh_pop_font_color" />

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/editText5"
                        android:layout_toRightOf="@+id/textView8"
                        android:background="@color/wxh_pop_line_bg"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignLeft="@+id/linearLayout5"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="5dp"
                        android:background="#0fff"
                        android:textSize="13sp"
                        android:ems="10" >

                        <requestFocus />
                    </EditText>
                </RelativeLayout>
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/wxh_pop_line_bg"
                android:orientation="vertical" >
            </LinearLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
        			android:textColor="@color/wxh_pop_font_color"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:text="选择封面图:" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/textView9"
                    android:src="@drawable/pic_home_hide_sc" />
                
            </RelativeLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/wxh_pop_line_bg"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >
            </LinearLayout>
            
            <Button 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
        		android:background="@color/login_top_color"
                android:text="发布"
                android:padding="7dp"
                android:layout_margin="10dp"/>
            
        </LinearLayout>
    </ScrollView>

</RelativeLayout>